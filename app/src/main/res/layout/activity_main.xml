<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ScoreID"
        android:layout_width="108dp"
        android:layout_height="81dp"
        tools:text="score"
        android:textColor="#B31818"
        app:drawableTint="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="16dp"
        android:background="#000000"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#CC0808"
        android:indeterminateTint="#AF0808"
        android:progressBackgroundTint="#000000"
        android:progressTint="#A3CA16"
        app:layout_constraintBottom_toTopOf="@+id/ScoreID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <LinearLayout
        android:id="@+id/LinearLayoutID"
        android:layout_width="409dp"
        android:layout_height="582dp"
        android:background="@drawable/balloon"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ScoreID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.48" />

</androidx.constraintlayout.widget.ConstraintLayout>